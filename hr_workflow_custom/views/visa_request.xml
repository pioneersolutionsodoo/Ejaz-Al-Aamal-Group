        <record model="ir.ui.view" id="view_visa_request_form_inherit">
            <field name="name">visa request</field>
            <field name="model">visa.request</field>
            <field name="inherit_id" ref="visa_request.view_visa_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='direct_manager']" position="attributes">
                    <attribute name="string">Line Manager Approve</attribute>
                </xpath>
                <xpath expr="//field[@name='d_manager_note']" position="attributes">
