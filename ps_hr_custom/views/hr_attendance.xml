<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_attendance_tree_PHC">
            <field name="name">view_attendance_tree_PHC</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='check_in']" position="after">
                    <field name="check_in_date" readonly="0" optional="show"/>
                    <field name="check_in_time" readonly="0" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='check_out']" position="after">
                    <field name="check_out_date" readonly="0" optional="show"/>
                    <field name="check_out_time" readonly="0" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='check_in']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>