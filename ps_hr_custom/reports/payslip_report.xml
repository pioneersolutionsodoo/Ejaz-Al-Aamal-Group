<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template inherit_id="web.minimal_layout" id="minimal_layout_inherit">
            <xpath expr="//head" position="inside">
                <link rel="preconnect" href="https://fonts.gstatic.com" />
                <link href="https://fonts.googleapis.com/css2?family=Almarai:wght@300&amp;display=swap" rel="stylesheet"/>
            </xpath>
        </template>

        <template id="payslip_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">

                        <h2 style="text-align:center;margin-top:0px;">
                            <strong t-field="o.name"/>
                        </h2>
                        <style >
                            td, th {vertical-align:middle;padding-left:5px;padding-right:5px;}
                            * { font-family: 'Almarai', sans-serif; }
                            td { font-size:13px; }
                            tr { height:30px; }
                            .strong-font td { font-weight:bold; }

                            .watermark { position: absolute; opacity:0.2; font-size:100px; width:50%; text-align:center;
                            z-index:99; border: 2px solid black; -webkit-transform: rotate(-30deg);border-radius:20px; }
                        </style>

                        <t t-set="can_be_printed" t-value="o._can_be_printed()"/>
                        <t t-if="can_be_printed">
                            <div class="watermark" style="top:600px;right:25%;">
                                <strong style="font-family:sans-serif;">DRAFT</strong>
                            </div>
                        </t>

                        <div class="page" >

                            <!--                            <h6 style="text-align:center;margin-bottom:10px;">-->
                            <!--                                <strong>Employee Details</strong>-->
                            <!--                            </h6>-->
                            <!--                            <h6 style="text-align:center;margin-bottom:10px;">-->
                            <!--                                <strong>بيانـــــات الموظـــــــف</strong>-->
                            <!--                            </h6>-->

                            <table style="width:100%;margin-top:20px;">
                                <tr style="width:100%;">
                                    <td style="width:50%;text-align:right;padding-right:10px;">
                                        <h6><strong>Employee Details</strong></h6>
                                    </td>
                                    <td style="width:50%;text-align:left;padding-left:10px;">
                                        <h6><strong>بيانـــــات الموظـــــــف</strong></h6>
                                    </td>
                                </tr>
                            </table>

                            <table class="strong-font" style="border-spacing:0;margin-bottom:0;border:1px solid gray;width:100%;">
                                <tr style="border:1px solid gray;">
                                    <td class="text-center" style="border:1px solid gray;width:20%;background-color:#e6e6ff">
                                        Employee Name
                                        <br/>
                                        إســـم الموظـــف
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;width:30%">
                                        <span t-field="o.employee_id.name"/>
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;width:20%;background-color:#e6e6ff;">
                                        Employee Number
                                        <br/>
                                        الرقــم الوظيفـــى
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;width:30%">
                                        <span t-field="o.employee_id.emp_code"/>
                                    </td>
                                </tr>

                                <tr style="border:1px solid gray;">
                                    <td class="text-center" style="border:1px solid gray;background-color:#e6e6ff">
                                        Position
                                        <br/>
                                        المسمـى الوظيفــى
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;">
                                        <span t-field="o.employee_id.job_id.name"/>
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;background-color:#e6e6ff;">
                                        Department
                                        <br/>
                                        الإدارة
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;">
                                        <span t-field="o.employee_id.department_id.name"/>
                                    </td>
                                </tr>

                                <tr style="border:1px solid gray;">
                                    <td class="text-center" style="border:1px solid gray;background-color:#e6e6ff">
                                        Date Of Join
                                        <br/>
                                        تاريــخ التعييــن
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;">
                                        <span t-field="o.employee_id.aj_date"/>
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;background-color:#e6e6ff;">
                                        Job Location
                                        <br/>
                                        موقــع الوظيفــة
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;">
                                        <span t-field="o.employee_id.work_location_id.name"/>
                                    </td>
                                </tr>

                                <tr style="border:1px solid gray;">
                                    <td class="text-center" style="border:1px solid gray;background-color:#e6e6ff">
                                        ID No. / Iqama No.
                                        <br/>
                                        رقم الهوية/رقم الإقامة
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;">
                                        <span t-field="o.employee_id.identification_id"/>
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;background-color:#e6e6ff;">
                                        Leave Balance
                                        <br/>
                                        رصيـــد الاجــازات
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;">
                                        <span t-field="o.employee_id.balance_leave"/>
                                    </td>
                                </tr>

                                <tr style="border:1px solid gray;">
                                    <td class="text-center" style="border:1px solid gray;background-color:#e6e6ff">
                                        Bank Name
                                        <br/>
                                        اســــم البنـــك
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;">
                                        <span t-field="o.res_partner_bank_id.bank_id.name"/>
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;background-color:#e6e6ff;">
                                        IBAN No.
                                        <br/>
                                        رقـــم الأيبــان
                                    </td>
                                    <td class="text-center" style="border:1px solid gray;">
                                        <span t-field="o.res_partner_bank_id.acc_number"/>
                                    </td>
                                </tr>

