        <record id="payslip_report" model="ir.actions.report">
            <field name="name">Payslip Customized</field>
            <field name="model">hr.payslip</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ps_hr_custom.payslip_report_template</field>
            <field name="report_file">ps_hr_custom.payslip_report_template</field>
            <field name="print_report_name">'Payslip - %s' % (object.employee_id.name)</field>
