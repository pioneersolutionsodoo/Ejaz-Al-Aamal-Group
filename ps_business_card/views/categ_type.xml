<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--   List Views  -->
        <!--   ==========  -->
        <record model="ir.ui.view" id="business_card_type_tree_view">
            <field name="name">Business Card Type List View</field>
            <field name="model">business.card.type</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="business_card_category_tree_view">
            <field name="name">Business Card Category List View</field>
            <field name="model">business.card.category</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>


        <!--   Form Views  -->
        <!--   ==========  -->
        <record model="ir.ui.view" id="business_card_type_form_view">
            <field name="name">Business Card Type Form View</field>
            <field name="model">business.card.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="sequence"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description" string="Description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="business_card_category_form_view">
            <field name="name">Business Card Category Form View</field>
            <field name="model">business.card.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="sequence"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description" string="Description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!--    Actions   -->
        <!--   ========   -->
        <record model="ir.actions.act_window" id="action_business_card_type">
            <field name="name">Business Card Type</field>
            <field name="res_model">business.card.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new Business Card Type</p>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_business_card_category">
            <field name="name">Business Card Category</field>
            <field name="res_model">business.card.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new Business Card Category</p>
            </field>
        </record>


        <!--    Menus    -->
        <!--   =======   -->
        <menuitem id="business_card_type_menu" name="Types" action="action_business_card_type"
                  parent="ps_business_card.business_card_config_menu" sequence="1"/>

        <menuitem id="business_card_category_menu" name="Categories" action="action_business_card_category"
                  parent="ps_business_card.business_card_config_menu" sequence="2"/>

    </data>
</odoo>