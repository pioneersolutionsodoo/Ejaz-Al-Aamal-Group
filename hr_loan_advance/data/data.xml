<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="hr_rule_loan" model="hr.salary.rule">
            <field name="name">Loan</field>
            <field name="sequence" eval="101"/>
            <field name="code">Loan</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -(employee.loan_advance_payslip(payslip.employee_id,
                payslip.date_from, payslip.date_to,'loan'))
            </field>
<!--            <field name="struct_id" ref="hr_payroll_customize.structure_worker_0111"/>-->

        </record>

        <record id="hr_rule_advance" model="hr.salary.rule">
            <field name="name">Advance</field>
            <field name="sequence" eval="101"/>
            <field name="code">Advance</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -(employee.loan_advance_payslip(payslip.employee_id,
                payslip.date_from, payslip.date_to,'advance'))
            </field>
<!--            <field name="struct_id" ref="hr_payroll_customize.structure_worker_0111"/>-->

        </record>
    </data>
</odoo>

