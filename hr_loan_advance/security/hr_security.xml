<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="module_hr_group">
            <field name="name">HR Group</field>
            <field name="sequence">50</field>
        </record>

        <!--  ======== Group For Admin and Financial Director -->
        <record id="group_admin_fd_user" model="res.groups">
            <field name="name">Admin &amp; Financial Director</field>
            <field name="category_id" ref="module_hr_group"/>
        </record>

        <record id="group_allow_another_loan" model="res.groups">
            <field name="name">Allow Create Another Loan</field>
            <field name="category_id" ref="module_hr_group"/>
        </record>

        <record id="group_allow_update_loan_line_date" model="res.groups">
            <field name="name">Allow Update Loan Line Date</field>
            <field name="category_id" ref="module_hr_group"/>
        </record>



        <record id="loan_multi_company_rule" model="ir.rule">
            <field name="name">Loan multi-company</field>
            <field ref="model_hr_employee_loan_ps" name="model_id"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id','=',False), ('company_id','in', user.company_ids.ids)]</field>
        </record>

        <record id="advance_multi_company_rule" model="ir.rule">
            <field name="name">Advance multi-company</field>
            <field ref="model_hr_employee_advance_ps" name="model_id"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id','=',False), ('company_id','in', user.company_ids.ids)]</field>
        </record>

    </data>
</odoo>