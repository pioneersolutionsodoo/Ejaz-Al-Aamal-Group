<?xml version="1.0" ?>
<odoo>
    <data>

        <record id="view_company_form_fig" model="ir.ui.view">
            <field name="name">view.company.form.fig</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook/page[last()]" position="after">
                    <page string="Accounting Configuration">
                        <group>
                            <field name="loan_journal_id" string="Loan Journal"/>
                            <field name="manual_close_loan_journal_id" string="Closing Loan Journal"/>
                            <field name="advance_journal_id" string="Advance Journal"/>
                        </group>
                    </page>
                    <!-- Add your fields or attributes here -->
                </xpath>

            </field>
        </record>





    </data>
</odoo>
