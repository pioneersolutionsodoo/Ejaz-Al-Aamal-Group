<?xml version="1.0" ?>
<odoo>
    <data>

        <record id="loan_invoice_form_inherit" model="ir.ui.view">
            <field name="name">loan.invoice.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Loans ">
                        <group>
                            <field name="closed_loan_id" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
