<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
           <!-- Inherit Form View to Modify it -->
        <record id="add_default_account" model="ir.ui.view">
            <field name="name">Default Account</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
           <xpath expr="//page[@name='bank_account']/group/group" position="inside">
                <field name="default_account_id" attrs="{'required': [('type', '=', 'general')]}"/>
               </xpath>

            </field>
        </record>


    </data>
</odoo>