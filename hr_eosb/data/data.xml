<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="hr_rule_eosb" model="hr.salary.rule">
            <field name="name">EOSB</field>
            <field name="sequence" eval="101"/>
            <field name="code">EOSB</field>
            <field name="category_id" ref="hr_payroll.COMP"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (employee.eosb_payslip(payslip.employee_id))
            </field>
            <field name="struct_id" ref="hr_payroll_customize.structure_worker_0111"/>
        </record>

        <record id="hr_eosb_cron" model="ir.cron">
            <field name="name">Calculate Total EOSB Every month</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.monthly_get_eosb_for_every_employee()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="True"/>
        </record>
    </data>
</odoo>

