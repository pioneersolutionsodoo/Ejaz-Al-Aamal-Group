<?xml version="1.0" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="hr_hr_employee_view_form2_00">
            <field name="name">hr.employee.eosb.form2</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id"
                   ref="alshrooq_employee_details.view_employee_form_inherit_alshrooq_employee_details"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='contract_type']" position="after">
                    <field name="eosb_emp_type_id"
                           options="{'limit': 10, 'no_open': 1, 'no_create': 1, 'no_create_edit': 1}"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="total_eosb" string="Total EOSB" groups="hr.group_hr_manager"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
