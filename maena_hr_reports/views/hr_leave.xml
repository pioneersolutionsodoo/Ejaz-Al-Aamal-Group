<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_hr_holidays_saudi_form_inherit_MHR">
            <field name="name">HR.leave.MHR</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="pioneer_HR_Leave.view_hr_holidays_saudi_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='to']" position="inside">
                    <field name="period_type" widget="radio" options="{'horizontal': 1}" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="date_actual_return" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="deduction_exempt" attrs="{'readonly':[('state','in',('cancel', 'refuse', 'validate'))]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>