<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="certificate_purpose_tree_view">
            <field name="name">Certificate Purpose List View</field>
            <field name="model">certificate.purpose</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="certificate_purpose_form_view">
            <field name="name">Certificate Purpose Form View</field>
            <field name="model">certificate.purpose</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group string="Description">
                            <field name="description" string="Notes" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_certificate_purpose">
            <field name="name">Certificate Purpose</field>
            <field name="res_model">certificate.purpose</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new Employee Certificate Purpose</p>
            </field>
        </record>

        <menuitem id="certificate_purpose_menu" name="Certificate Purpose"
                  parent="hr.menu_human_resources_configuration" action="action_certificate_purpose"
                  sequence="2"/>

    </data>
</odoo>