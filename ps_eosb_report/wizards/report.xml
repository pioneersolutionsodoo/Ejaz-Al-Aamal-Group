                                    <table style="width:100%;" class="table-condensed table-bordered">
                                        <thead>
                                            <th style="background-color:#A9A9A9" class="text-center">Year</th>
                                            <th style="background-color:#A9A9A9" class="text-center"
                                                t-foreach="o['year']" t-as="y">
                                                <span t-esc="y"/>
                                            </th>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td style="background-color:#A9A9A9" class="text-center">Amount</td>
                                                <td class="text-center" t-foreach="o['amount']" t-as="a">
                                                    <span t-esc="a"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="background-color:#A9A9A9" class="text-center">Total</td>
                                                <td class="text-center">
                                                    <span t-esc="sum(o['amount'])"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </tbody>
                            </table>
                            <br/>
                        </t>
