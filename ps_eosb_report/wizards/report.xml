        <template id="eosb_reward_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout" t-lang="en_US">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div style="color:#66b3ff; width: 100%">
                            <strong>
                                <h2 class="text-center">
                                    <strong>EOSB Yearly Rewards Report</strong>
                                </h2>
                            </strong>
                        </div>
                        <t t-foreach="final" t-as="o">
