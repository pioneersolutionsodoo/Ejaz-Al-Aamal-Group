<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_hr_holidays_saudi_form_inherit" model="ir.ui.view">
            <field name="name">view hr holidays saudi form inherit</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="pioneer_HR_Leave.view_hr_holidays_saudi_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='request_date']" position="after">
                    <field name="hr_clearance_id" string="Clearance" readonly="1"/>
                    <field name="check_clearance" string="Clearance Count" invisible="1"/>
                </xpath>

                <xpath expr="//header" position="inside">
                    <button type="object" string="Create Clearance" class="btn-primary"
                            name="create_clearance"
                            attrs="{'invisible':[('check_clearance','=',1)]}"/>
                </xpath>


            </field>
        </record>
    </data>
</odoo>