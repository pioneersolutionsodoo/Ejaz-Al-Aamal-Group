<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <template id="employee_clearance_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="pioneer_hr_clearance.external_layout">
                        <h4 style="text-align:center;">
                            <strong>Clearance Form</strong>
                        </h4>
                        <div class="page">
                            <table style="border-spacing:0;margin-bottom:0; width: 1050px; border: 1px solid gray;"
                                   class="table">
                                <thead>
                                    <tr style="background-color:#006495;border:1px solid gray;color:white">
                                        <th class="text-center" style="width:1050px" colspan="4">Employee Information
                                        </th>
                                    </tr>
                                </thead>
                                <tr style="border:1px solid gray;">
                                    <td class="text-left"
                                        style="border:1px solid gray;width:25%;background-color:#e6e6ff">Employee
                                    </td>
                                    <td class="text-left" style="border:1px solid gray;width:25%">
                                        <span t-esc="o.employee_id.name"/>
                                    </td>
                                    <td class="text-left"
                                        style="border:1px solid gray;width:25%;background-color:#e6e6ff">Employee Code
                                    </td>
                                    <td class="text-left" style="border:1px solid gray;width:25%">
                                        <span t-esc="o.employee_no"/>
                                    </td>
                                </tr>
                                <tr style="border:1px solid gray;">
                                    <td class="text-left"
                                        style="border:1px solid gray;width:25%;background-color:#e6e6ff">Job Title
                                    </td>
                                    <td class="text-left" style="border:1px solid gray;width:25%">
                                        <span t-esc="o.job_id.name"/>
                                    </td>
                                    <td class="text-left"
                                        style="border:1px solid gray;width:25%;background-color:#e6e6ff">Project
                                    </td>
                                    <td class="text-left" style="border:1px solid gray;width:25%">
                                        <span t-esc="o.project_id.name"/>
                                    </td>
                                </tr>
                                <tr style="border:1px solid gray;">
                                    <td class="text-left"
                                        style="border:1px solid gray;width:25%;background-color:#e6e6ff">Work Location
                                    </td>
                                    <td class="text-left" style="border:1px solid gray;width:25%">
                                        <span t-field="o.employee_id.work_location"/>
                                    </td>
                                    <td class="text-left"
                                        style="border:1px solid gray;width:25%;background-color:#e6e6ff">
                                    </td>
                                    <td class="text-left" style="border:1px solid gray;width:25%"></td>
                                </tr>
                            </table>
                            <table style="border-spacing:0;margin-bottom:0; width: 1050px; border: 1px solid gray;"
                                   class="table">
                                <thead>
                                    <tr style="background-color:#006495;border:1px solid gray;color:white">
                                        <th class="text-center" style="width:1050px" colspan="4">Request Details
                                        </th>
                                    </tr>
                                </thead>
                                <tr style="border:1px solid gray;">
                                    <td class="text-left"
                                        style="border:1px solid gray;width:25%;background-color:#e6e6ff">Request Number
                                    </td>
                                    <td class="text-left" style="border:1px solid gray;width:25%">
                                        <span t-esc="o.name"/>
                                    </td>
                                    <td class="text-left"
                                        style="border:1px solid gray;width:25%;background-color:#e6e6ff">Type
                                    </td>
                                    <td class="text-left" style="border:1px solid gray;width:25%">
                                        <span t-esc="o.type"/>
                                    </td>
                                </tr>
                            </table>
                            <table style="border-spacing:0;margin-bottom:0;width: 1050px; border: 1px solid gray;"
                                   class="table">
                                <thead>
                                    <tr style="background-color:#006495;border:1px solid gray;color:white">
                                        <th class="text-center" style="width:1050px" colspan="4">Contract Details
                                        </th>
                                    </tr>
                                </thead>
                                <tr style="border:1px solid gray;">
                                    <td class="text-left"
                                        style="border:1px solid gray;width:25%;background-color:#e6e6ff">Joining Date
                                    </td>
                                    <td class="text-left" style="border:1px solid gray;width:25%">
                                        <span t-esc="o.employee_id.aj_date"/>
                                    </td>
                                    <td class="text-left"
                                        style="border:1px solid gray;width:25%;background-color:#e6e6ff">Last Working
                                        Date
                                    </td>
                                    <td class="text-left" style="border:1px solid gray;width:25%">
                                        <span t-esc="o.last_working_date" t-options="{'widget':'date'}"/>
                                    </td>
                                </tr>
                            </table>

                            <!--===================================================================-->
                            <br></br>
                            <table style="width:100%;margin:0px auto;background:white;border:1px solid gray;">
                                <thead style="font-size:20px;border:1px solid gray;">
                                    <tr style="background-color:#006495;border:1px solid gray;color:white">
                                        <th class="text-center" style="border:1px solid gray;width:40%;">
                                            <strong>Signature</strong>
                                        </th>
                                        <th class="text-center" style="border:1px solid gray;width:25%;">
                                            <strong>Date</strong>
                                        </th>
                                        <th class="text-center" style="border:1px solid gray;width:35%;">
                                            <strong>Applicant</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr style="border:1px solid gray;width:100%">
                                        <th class="text-center" style="border:1px solid gray;width:40%;"></th>
                                        <th class="text-center" style="border:1px solid gray;width:25%;"><span t-esc="o.date" t-options="{'widget': 'date'}"/></th>
                                        <th class="text-center"
                                            style="width:35%;border:1px solid gray;background-color:#e6e6ff">
                                            <strong style="color:#A0A0A0;">Employee</strong>
                                            <br/>
                                            <span t-field="o.employee_id.name"/>
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                            <br></br>
                            <h4 style="text-align:center;">
                                <strong>Approval From Responsibles</strong>
                            </h4>
                            <table style="width:100%;margin:0px auto;background:white;border:1px solid gray;">
                                <thead style="font-size:20px;border:1px solid gray;">
                                    <tr style="background-color:#006495;border:1px solid gray;color:white">
                                        <th class="text-center" style="width:35%;border:1px solid gray;">
                                            <strong>Responsibles Notes</strong>
                                        </th>
                                        <th class="text-center" style="border:1px solid gray;width:15%;">
                                            <strong>Date</strong>
                                        </th>
                                        <th class="text-center" style="border:1px solid gray;width:25%;">
                                            <strong>Signature</strong>
                                        </th>
                                        <th class="text-center" style="border:1px solid gray;width:35%;">
                                            <strong>Responsible</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr style="border:1px solid gray;width:100%">
                                        <th class="text-center" style="border:1px solid gray;width:35%;">
                                            <br></br>
                                            <p style="text-align:center;">
                                                <strong>
                                                    <span t-esc="o.d_manager_note"/>
                                                </strong>
                                            </p>
                                        </th>
                                        <th class="text-center" style="border:1px solid gray;width:15%;"><span t-esc="o.d_manager_date"/> </th>
                                        <th class="text-center" style="border:1px solid gray;width:25%;"></th>
                                        <th class="text-center"
                                            style="width:35%;border:1px solid gray;background-color:#e6e6ff">
                                            <strong style="color:#A0A0A0;">Direct Manager</strong>
                                            <br/>
                                            <span t-field="o.d_manager"/>
                                        </th>
                                    </tr>
                                    <tr style="border:1px solid gray;width:100%">
                                        <th class="text-center" style="border:1px solid gray;width:35%;">
                                            <br/>
                                            <p style="text-align:center;">
                                                <strong>
                                                    <span t-esc="o.hr_manager_note"/>
                                                </strong>
                                            </p>
                                        </th>
                                        <th class="text-center" style="border:1px solid gray;width:15%;"><span t-esc="o.hr_manager_date"/></th>
                                        <th class="text-center" style="border:1px solid gray;width:25%;"></th>
                                        <th class="text-center"
                                            style="width:35%;border:1px solid gray;background-color:#e6e6ff">
                                            <strong style="color:#A0A0A0;">HR Manager</strong>
                                            <br/>
                                            <span t-field="o.hr_manager_id"/>
                                        </th>
                                    </tr>
                                    <tr style="border:1px solid gray;width:100%">
                                        <th class="text-center" style="border:1px solid gray;width:35%;">
                                            <br/>
                                            <p style="text-align:center;">
                                                <strong>
                                                    <span t-esc="o.account_manager_note"/>
                                                </strong>
                                            </p>
                                        </th>
                                        <th class="text-center" style="border:1px solid gray;width:15%;"><span t-esc="o.account_manager_date"/></th>
                                        <th class="text-center" style="border:1px solid gray;width:25%;"></th>
                                        <th class="text-center"
                                            style="width:35%;border:1px solid gray;background-color:#e6e6ff">
                                            <strong style="color:#A0A0A0;">Accounting Manager</strong>
                                            <br/>
                                            <span t-field="o.account_manager_id"/>
                                        </th>
                                    </tr>
                                    <tr style="border:1px solid gray;width:100%">
                                        <th class="text-center" style="border:1px solid gray;width:35%;">
                                            <br></br>
                                            <p style="text-align:center;">
                                                <strong>
                                                    <span t-esc="o.admin_manager_note"/>
                                                </strong>
                                            </p>
                                        </th>
                                        <th class="text-center" style="border:1px solid gray;width:15%;"><span t-esc="o.admin_manager_date"/></th>
                                        <th class="text-center" style="border:1px solid gray;width:25%;"></th>
                                        <th class="text-center"
                                            style="width:35%;border:1px solid gray;background-color:#e6e6ff">
                                            <strong style="color:#A0A0A0;">Admin Manager</strong>
                                            <br/>
                                            <span t-field="o.admin_manager_id"/>
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>

                </t>
            </t>
        </template>

        <template id="external_layout">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>

            <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}">
                <t t-raw="0"/>
            </t>
            <t t-else="else" t-call="pioneer_hr_clearance.external_layout_standard_custom">
                <t t-raw="0"/>
            </t>

        </template>


        <template id="external_layout_standard_custom">
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <div class="row">
                    <div class="col-3 mb4">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;"
                             alt="Logo"/>
                    </div>
                    <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
                </div>
                <div t-if="company.logo or company.report_header" class="row zero_min_height">
                    <div class="col-12">
                        <div style="border-bottom: 1px solid black;"/>
                    </div>
                </div>
                <!--<div class="row">
                    <div class="col-6" name="company_address">
                        <div t-field="company.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                        />
                    </div>
                </div>-->
            </div>

            <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
                 t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>

            <div style="color:#D2691E;font-weight:bold;font-size:22px"
                 t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <div class="text-center" style="">
                    <ul class="list-inline mb4">
                        <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                             adding d-inline class fixes the problem-->
                        <li class="list-inline-item d-inline">UNA: 92 00 33 162</li>
                        <span style="color:#000000;">|</span>
                        <li class="list-inline-item d-inline">FAX: 966 11 49 12 162</li>
                        <span style="color:#000000;">|</span>
                        <li class="list-inline-item d-inline">P.O.BOX 295933</li>
                        <li class="list-inline-item d-inline">Riyadh 11351</li>
                    </ul>

                </div>

                <div class="text-center" style="">
                    <ul class="list-inline mb4">
                        <li class="list-inline-item d-inline" style="color:#00008B">
                            <a
                                    style="color:#00008B;font-weight:bold;font-size:22px" href="https://www.aa.edu.sa">
                                www.aa.edu.sa
                            </a>
                        </li>
                        <span style="color:#000000;">|</span>
                        <li class="list-inline-item d-inline" style="color:#D2691E;font-weight:bold;font-size:22px">
                            Kingdom of Saudi Arabia
                        </li>
                    </ul>
                </div>

                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>
                <div t-if="report_type == 'pdf'" class="text-muted text-center">
                    Page:
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </div>
        </template>

        <record id="hr_employee_clearance_report" model="ir.actions.report">
            <field name="name">Employee Clearance</field>
            <field name="model">hr.employee.clearance</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pioneer_hr_clearance.employee_clearance_template</field>
            <field name="report_file">pioneer_hr_clearance.employee_clearance_template</field>
            <field name="binding_model_id" ref="model_hr_employee_clearance"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'%s Clearance' % (object.employee_id.name)</field>
        </record>

    </data>
</odoo>
