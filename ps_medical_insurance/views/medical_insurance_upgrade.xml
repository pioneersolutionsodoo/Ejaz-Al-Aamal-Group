<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="medical_insurance_upgrade_tree_view">
            <field name="name">Medical Insurance Upgrade List View</field>
            <field name="model">medical.insurance.upgrade</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id" optional="hide"/>
                    <field name="job_id" optional="hide"/>
                    <field name="active_insurance_id" optional="hide"/>
                    <field name="insurance_provider_id" string="Current Provider"/>
                    <field name="insurance_class_id" string="Current Class"/>
                    <field name="insurance_expiry_date" optional="hide"/>
                    <field name="new_insurance_provider_id" string="New Provider"/>
                    <field name="new_insurance_class_id" string="New Class"/>
                    <field name="state" widget="badge" decoration-info="state in ('draft', 'wait_4_hr_mgr')"
                           decoration-success="state == 'approve'" decoration-danger="state == 'refuse'" />
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="medical_insurance_upgrade_form_view">
            <field name="name">Medical Insurance Upgrade Form View</field>
            <field name="model">medical.insurance.upgrade</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_send_request" type="object" states="draft" string="Request From HRM" class="oe_highlight"/>
                        <button name="action_approve" type="object" states="wait_4_hr_mgr" string="Approve" class="oe_highlight"
                                groups="hr.group_hr_manager"/>
                        <button name="action_refuse" type="object" states="wait_4_hr_mgr" string="Refuse"
                                groups="hr.group_hr_manager"/>
                        <button name="action_cancel" type="object" states="wait_4_hr_mgr" string="Cancel"
                                groups="hr.group_hr_manager"/>
                        <button name="action_draft" type="object" states="cancel" string="Set to Draft"
                                groups="hr.group_hr_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approve"/>
                    </header>

                    <div class="alert alert-warning mb-0" role="alert" attrs="{'invisible': ['|', ('active_insurance_id', '!=', False), ('employee_id', '=', False)]}">
                        The Chosen Employee doesn't have an Active Medical Insurance!
                    </div>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" options="{'no_create': True}" attrs="{'readonly':[('state', 'not in', ('draft'))]}"/>
                                <field name="department_id" options="{'no_create': True}"/>
                                <field name="job_id" options="{'no_create': True}"/>
                            </group>
                            <group></group>
                            <group string="Current Medical Insurance">
                                <field name="active_insurance_id" options="{'no_create': True}" force_save="1"/>
                                <field name="insurance_provider_id" options="{'no_create': True}" force_save="1"/>
                                <field name="insurance_class_id" options="{'no_create': True}" force_save="1"/>
                                <field name="insurance_expiry_date" force_save="1"/>
                            </group>
                            <group string="Medical Insurance Upgrade">
                                <field name="new_insurance_provider_id" options="{'no_create': True}" attrs="{'readonly':[('state', 'not in', ('draft','wait_4_hr_mgr'))]}"/>
                                <field name="new_insurance_class_id" options="{'no_create': True}" attrs="{'readonly':[('state', 'not in', ('draft','wait_4_hr_mgr'))]}"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Reason">
                                <group>
                                    <field name="reason" nolabel="1" attrs="{'readonly':[('state', 'not in', ('draft','wait_4_hr_mgr'))]}"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>



         <record model="ir.ui.view" id="medical_insurance_upgrade_search_view">
            <field name="name">Medical Insurance Upgrade Search View</field>
            <field name="model">medical.insurance.upgrade</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="active_insurance_id"/>
                    <field name="insurance_provider_id"/>
                    <field name="insurance_class_id"/>
                    <field name="new_insurance_provider_id"/>
                    <field name="new_insurance_class_id"/>
                    <filter name="my_insurances" string='My Requests' domain="[( 'employee_id.user_id', '=', uid )]"/>
                    <filter name="to_be_approved" string='To Be Approved' domain="[('state', '=', 'wait_4_hr_mgr')]"/>

                    <group string="Group By">
                        <filter name="by_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_medical_insurance_upgrade">
            <field name="name">Medical Insurance Upgrade</field>
            <field name="res_model">medical.insurance.upgrade</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_my_insurances': 1}</field>
<!--            <field name="context">{}</field>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new Medical Insurance Upgrade Request</p>
            </field>
        </record>


        <menuitem id="medical_insurance_upgrade_menu" name="Medical Insurance Upgrade"
                  parent="ps_medical_insurance.medical_insurance_root" action="action_medical_insurance_upgrade"
                  sequence="4" groups="base.group_user"/>

    </data>
</odoo>