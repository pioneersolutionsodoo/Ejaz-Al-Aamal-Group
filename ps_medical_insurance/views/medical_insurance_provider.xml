<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="medical_insurance_provider_tree_view">
            <field name="name">Medical Insurance Provider List View</field>
            <field name="model">medical.insurance.provider</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
<!--                    <field name="insurance_class_id"/>-->
                    <field name="description"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="medical_insurance_provider_form_view">
            <field name="name">Medical Insurance Provider Form View</field>
            <field name="model">medical.insurance.provider</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
<!--                        <group>-->
<!--                            <group>-->
<!--                                <field name="insurance_class_id"/>-->
<!--                            </group>-->
<!--                        </group>-->
                        <group string="Description">
                            <field name="description" string="Notes" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_medical_insurance_provider">
            <field name="name">Medical Insurance Provider</field>
            <field name="res_model">medical.insurance.provider</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new Medical Insurance Provider</p>
            </field>
        </record>

        <menuitem id="medical_insurance_provider_menu" name="Medical Insurance Providers"
                  parent="ps_medical_insurance.medical_insurance_root" action="action_medical_insurance_provider"
                  sequence="2" groups="hr.group_hr_manager"/>

    </data>
</odoo>