<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_hr_holidays_saudi_form_inherit_003" model="ir.ui.view">
            <field name="name">view hr holidays saudi form inherit 003</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="pioneer_HR_Leave.view_hr_holidays_saudi_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='request_date']" position="after">
                    <field name="vacation_resettlement_id" string="Vacation Resettlement" readonly="1"/>
                    <field name="check_vacation_resettlement" string="Vacation Resettlement Count" invisible="1"/>
                </xpath>

                <xpath expr="//header" position="inside">
                    <button type="object" string="Create Vacation Resettlement" class="btn-primary"
                            name="create_vacation_resettlement"
                            attrs="{'invisible':[('check_vacation_resettlement','=',1)]}" />

                </xpath>


            </field>
        </record>
    </data>
</odoo>