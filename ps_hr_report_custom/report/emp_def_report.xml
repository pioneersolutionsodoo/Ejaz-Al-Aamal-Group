                                <tr>
                                    <td width="70%" style="text-align:center"></td>
                                    <td width="30%" style="text-align:center">الرئيس التنفيذي</td>
                                </tr>
                                <tr>
                                    <td width="70%" style="text-align:center"></td>
                                    <td width="30%" style="text-align:center">عمار الرجوب</td>
                                </tr>
                            </table>
                        </div>
